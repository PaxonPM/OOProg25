@page
@model RosBilRP.Pages.Lejer.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret ny Udlejning</h1>

<form method="post">
	<div class="form-group mb-3">
		<label class="control-label">Kunde</label>
		<select asp-for="@Model.SelectedKundeId" asp-items="@Model.KundeList" class="form-control"></select>
		<span asp-validation-for="@Model.SelectedKundeId" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label class="control-label">Bil</label>
		<select asp-for="@Model.SelectedBilId" asp-items="@Model.BilList" class="form-control"></select>
		<span asp-validation-for="@Model.SelectedBilId" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.Dato" class="control-label"></label>
		<input asp-for="@Model.Dato" type="date" class="form-control" />
		<span asp-validation-for="@Model.Dato" class="text-danger"></span>
	</div>
	<div class="form-group mb-3">
		<label asp-for="@Model.AntalDage" class="control-label"></label>
		<input asp-for="@Model.AntalDage" class="form-control" />
		<span asp-validation-for="@Model.AntalDage" class="text-danger"></span>
	</div>

	<p>
		<div class="form-group mb-3">
			<input type="submit" value="Create" class="btn btn-outline-primary" />
		</div>
	</p>
</form>
