@page
@model RosBilRP.Pages.Kunder.OpretModel
@{
}

<h1 class="display-3 mb-5">Opret ny Kunde</h1>

<form method="post">
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Navn" class="control-label"></label>
        <input asp-for="@Model.Element.Navn" class="form-control" />
        <span asp-validation-for="@Model.Element.Navn" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.Telefon" class="control-label"></label>
        <input asp-for="@Model.Element.Telefon" class="form-control" />
        <span asp-validation-for="@Model.Element.Telefon" class="text-danger"></span>
    </div>
    <div class="form-group mb-3">
        <label asp-for="@Model.Element.VIP" class="control-label"></label>
        <input asp-for="@Model.Element.VIP" class="form-check-input m-1" type="checkbox" />
        <span asp-validation-for="@Model.Element.VIP" class="text-danger"></span>
    </div>

    <p>
        <div class="form-group mb-3">
            <input type="submit" value="Opret" class="btn btn-outline-primary" />
        </div>
    </p>
</form>
