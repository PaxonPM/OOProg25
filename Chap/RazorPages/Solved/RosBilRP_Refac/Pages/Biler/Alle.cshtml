@page
@model RosBilRP.Pages.Biler.AlleModel
@{
}

<h1 class="display-3 mb-5">Biler</h1>

<div class="container">
    <div class="row">
        @foreach (var elem in Model.Data)
        {
            <div class="col-md-4 p-3">
                <div class="card shadow" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@elem.Nummerplade</h3>
                        <h5>@(elem.Model)</h5>
                        <h5>@(elem.PrisPrDag) kr./dag</h5>
                        <div>
                            @if (Model.CanDelete(elem.Id))
                            {
                                <a class="btn btn-outline-danger btn-sm mt-3"
                                   type="button"
                                   title="Slet"
                                   asp-page="Slet"
                                   asp-route-id="@elem.Id">
                                    <i class="bi-trash"></i>
                                </a>
                            }
                            <a class="btn btn-outline-info btn-sm mt-3"
                               type="button"
                               title="Historik"
                               asp-page="Historik"
                               asp-route-id="@elem.Id">
                                <i class="bi-clock-history"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<p>
    <a class="btn btn-outline-primary mt-3" asp-page="Opret"> Opret ny Bil </a>
</p>
