@page
@model RosBilRP.Pages.Lejer.AlleModel
@{
}

<h1 class="display-3 mb-5">Udlejninger</h1>

<div class="container">
    <div class="row">
        @foreach (var elem in Model.Data)
        {
            <div class="col-md-4 p-3">
                <div class="card shadow" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@elem.Kunde.Navn / @elem.Bil.Nummerplade</h3>
                        <h5>@elem.Dato.ToShortDateString()</h5>
                        <h5>@elem.AntalDage dage</h5>
                        <h5>@(elem.AntalDage * elem.Bil.PrisPrDag) kr.</h5>
                        <div>
                            @if (Model.CanDelete(elem.Id))
                            {
                                <a class="btn btn-outline-danger btn-sm mt-3"
                                   type="button"
                                   title="Slet"
                                   asp-page="Slet"
                                   asp-route-id="@elem.Id">
                                    <i class="bi-trash text-danger"></i>
                                </a>
                            }

                            @if (elem.OpgaverIGang.Count > 0)
                            {
                                <a class="btn btn-outline-info btn-sm mt-3"
                                   type="button"
                                   title="Opgaver"
                                   asp-page="/Opgaver/ForLeje"
                                   asp-route-id="@elem.Id">
                                    <i class="bi-list"></i>
                                </a>
                            }
                            else
                            {
                                <a class="btn btn-outline-dark btn-sm mt-3"
                                   type="button"
                                   title="Opgaver (ingen i gang)"
                                   asp-page="/Opgaver/ForLeje"
                                   asp-route-id="@elem.Id">
                                    <i class="bi-list-check"></i>
                                </a>
                            }
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

<p>
    <a class="btn btn-outline-primary mt-3" asp-page="Opret"> Opret ny Udlejning </a>
</p>