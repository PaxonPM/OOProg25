@page
@model RosBilRP.Pages.Opgaver.ForAnsatModel
@{
}

<h1 class="display-3 mb-5">Opgaver for @Model.DenAnsatte.Navn</h1>

<div class="container">
    <div class="row">
        @foreach (var elem in Model.Data)
        {
            <div class="col-md-4 p-3">
                <div class="card shadow" style="width: 18rem;">
                    <div class="card-body d-flex flex-column">
                        <h3 class="card-title">@elem.Leje.Bil.Nummerplade (@elem.Leje.Id)</h3>
                        <h5>@elem.Beskrivelse</h5>
                        <h5>@(elem.Afsluttet ? "Afsluttet" : "I Gang")</h5>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
